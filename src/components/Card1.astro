---
const { text, alinhamento } = Astro.props;

let justifica = alinhamento === "direita" ? "justify-start" : "justify-end";
let lado = alinhamento === "direita" ? "r" : "l";
let rounded = alinhamento === "direita" ? "rounded-r-full" : "rounded-l-full";
let border = alinhamento === "direita" ? "border-r-2" : "border-l-2";
